set rnu
set syscalls
set dotfiles
set smartcase
set incsearch
set ignorecase
set scrolloff=4
set viewcolumns=*{name}..,16{mtime},7{}.

view
only

filetype * start, explorer
command! Q :execute '!echo %d > ~/.vifm/lastdir' | quit

nnoremap e :!gvim %"c&<cr>
nnoremap E :!gvim %"d&<cr>
nnoremap <F5> :restart<cr>
nnoremap <space><space> :!~/.vifm/scripts/CommandPalette %"d %"c<cr>

nnoremap vq :only<cr>
nnoremap vv :vsplit<cr>

nnoremap gv :volumes<cr>
nnoremap gh :cd $HOME<cr>
nnoremap gd :cd $HOME/Desktop<cr>
nnoremap gb :execute 'cd'
			\ fnameescape(term('cat ~/.vifm/user/bookmarks.txt | fzf | bash DefaultsTo .'))<cr>
nnoremap g/ :execute 'cd'
			\ fnameescape(term('fd --type d | fzf | bash DefaultsTo .'))<cr>
nnoremap gl :execute 'cd'
			\ fnameescape(term('fd --type d --max-depth 1 --hidden | fzf | bash DefaultsTo .'))<cr>
nnoremap g1/ :execute 'cd'
			\ fnameescape(term('fd --type d --max-depth 1 --hidden | fzf | bash DefaultsTo .'))<cr>
nnoremap g2/ :execute 'cd'
			\ fnameescape(term('fd --type d --max-depth 2 --hidden | sed -e s,\\,/,g | fzf | bash DefaultsTo .'))<cr>
nnoremap g3/ :execute 'cd'
			\ fnameescape(term('fd --type d --max-depth 3 --hidden | sed -e s,\\,/,g | fzf | bash DefaultsTo .'))<cr>

" yank current directory path to Windows clipboard with forward slashes
nnoremap yp :!echo -n %"d:gs!\!/! %i | iconv.exe -f UTF-8 -t CP950 | clip<cr>
" yank current directory path to Windows clipboard with backward slashes
nnoremap yP :!echo -n %"d %i | iconv.exe -f UTF-8 -t CP950 | clip<cr>
" yank path to current file to Windows clipboard with forward slashes
nnoremap yf :!echo -n %"c:gs!\!/! %i | iconv.exe -f UTF-8 -t CP950 | clip<cr>
" yank path to current directory to Windows clipboard with backward slashes
nnoremap yF :!echo -n %"c %i | iconv.exe -f UTF-8 -t CP950 | clip<cr>
" yank current filename without path to Windows clipboard
nnoremap yn :!echo -n %"c %i | iconv.exe -f UTF-8 -t CP950 | clip<cr>
" yank root of current file's name to Windows clipboard
nnoremap yr :!echo -n %c:r | iconv.exe -f UTF-8 -t CP950 | clip<cr>

" vim: ft=vim
